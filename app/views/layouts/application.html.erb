<!DOCTYPE html>
<html>
<head>
  <title>BallinBikes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jSignature/jSignature.min" %>
  <%= javascript_include_tag "jquery-ui/jquery-ui.min" %>
  <%= javascript_include_tag "clockpicker/jquery-clockpicker.min" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<header>
  <nav id="side_links">
    <%= link_to "New Customer", new_customer_path %>
    <%= link_to "New Service Ticket", new_service_path %>
    <%= link_to "Change Tax Rate", settings_path %>
  </nav>
  <nav id="main_links">
    <%= link_to "Home", root_path %>
    <%= link_to "Customers", customers_path %>
    <%= link_to "Service Tickets", services_path %>
  </nav>
</header>

<% if flash.present? %>
  <div id="flash_messages">
    <% flash.each do |type, message| %>
      <div class="<%= type %>">
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
